<%- include ('./partials/header.ejs') -%>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="theme-color" content="#50b4d4" />
    <meta property="og:type" content="CyberDevs Blog">
    <link rel="icon" type="image/png" href="../public/images/favicon.ico">
    
    <meta property="og:title" content="<%= blog.title %>">
    <meta name="author" content="<%= blog.author %>"/>
    <meta property="og:image" content="/uploads/images/luadao.png"/>

    <title> <%= blog.title %> </title>
</head>

<body>
  
  <header id="header" class="fixed-top d-flex align-items-center">
    <div class="container d-flex align-items-center">
      <h1 class="logo me-auto"><a href="/">CyberDevs Blog<span>.</span></a></h1>
    </div>
</header>
  <main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section class="breadcrumbs">
      <div class="container">
        <div class="col-2 mt-2 mb-5">

          <a href="/" class="rounded-pill shadow p-2  d-flex align-items-center justify-content-center"
            style="text-decoration:none;margin-top:100px"><span class="pr-0" style="color:black">Trở Lại</span>
          </a>
        </div>
        <h2><%= blog.title %> </h2>

      </div>
    </section><!-- End Breadcrumbs -->

    <!-- ======= Blog Single Section ======= -->
    <section id="blog" class="blog">
      <div class="container" data-aos="fade-up">

        <div class="row">

          <div class="col-lg-9 entries">

            <article class="entry entry-single">

              <div class="entry-img">
                <!-- //cloudinary image upload -->
              </div>

              <h2 class="entry-title">
                <a href=""><%= blog.title %></a>
              </h2>

              <div class="entry-meta">
                <ul>
                  <li class="d-flex align-items-center"><i class="bi bi-person"></i> <a ><%= blog.author%></a></li>
                  <li class="d-flex align-items-center"><i class="bi bi-clock"></i> <a ><time datetime="2020-01-01"><%= blog.timeCreated.toLocaleDateString() %></time></a></li>
                </ul>
              </div>

              <div class="entry-content" style="text-align: justify;">
              <p>

                <%- blog.description %>
              </p>
              </div>
              

              <div class="mb-2 mt-1 p-0 col-md-4 ">
                
                <!-- <button style="border:none; background:transparent" id="<%=blog.id%> myButton">Click Me<i class="bi bi-heart">  </i><i>Likes</i></button> -->
                <ul class="cats">
                </ul>
              </div>
              <div class="entry-footer">
                <i class="bi bi-tags"></i>
                <ul class="tags">
                  <li><a><%= blog.tags %> </a></li>
                </ul>
              </div>

            </article><!-- End blog entry -->

          </div><!-- End blog entries list -->

          

            
        </div>

      </div>
    </section><!-- End Blog Single Section -->

  </main>
  <%- include ('./partials/footer.ejs') -%>